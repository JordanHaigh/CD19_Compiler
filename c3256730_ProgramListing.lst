3: constants
4:     MAXARRLENGTH = 20
5: 
6: types
7:     point is
8:         x : integer,
9:         y : integer
10:     end
11: 
12: points is array[MAXARRLENGTH] of point
13: 
14: arrays
15:     polygon : points
16: 
17: 
18: function inputPoints() : integer
19:     numberOfPoints : integer,
20:     i : integer
21: begin
22:     repeat()
23:         printline "Enter the number of points";
24:         input numberOfPoints;
25:     until (numberOfPoints > 2) and (numberOfPoints <= MAXARRLENGTH);
26: 
27:     for(i=0; i < numberOfPoints)
28:         printline "Enter X and Y for point", i,".";
29:         input polygon[i].x, polygon[i].y;
30:     end
31: 
32:     return numberOfPoints;
33: end
34: 
35: 
36: function computeArea(polygon : points, arraySize : integer) : real
37:     sum : integer,
38:     area : real,
39:     i : integer
40: begin
41:     for(sum = 0,i = 0; i < arraySize-1)
42:         sum += (polygon[i+1].x + polygon[i].x) * (polygon[i+1].y - polygon[i].y);
43:         i = i+1;
44:     end
45: 
46:     if(sum < 0)
47:         sum = 0 - sum; /--should make it positive
48:     end
49: 
50:     area = (1/2) * sum;
51:     return area;
52: end
53: 
54: 
55: 
56: 
57: main
58:     numberOfPoints : integer,
59:     area : real
60: begin
61:     numberOfPoints = inputPoints();
62:     area = computeArea(polygon, numberOfPoints);
63:     printline "The area is: ", area, ".";
64: end
